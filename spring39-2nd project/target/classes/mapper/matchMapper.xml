<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="matchs">
	<insert id="insert" parameterType="matchVO">
		insert into MATCHS values (#{mid}, #{drink}, #{smoke}, #{believe}, #{tall}, #{mbti}, #{place}, #{contact})
	</insert>
	<delete id="delete" parameterType="matchVO">
		delete from MATCHS where mid = #{mid}
	</delete>
	<update id="update" parameterType="matchVO">
		update MATCHS set drink = #{drink} where mid = #{mid}
	</update>
	<select id="select" parameterType="matchVO" >
		select * from MATCHS where mid = #{mid}
	</select>
</mapper>
